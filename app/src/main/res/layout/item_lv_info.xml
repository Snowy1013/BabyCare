<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">
    <ImageView
        android:id="@+id/img_item_lv_info"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginLeft="2dp"/>
    <TextView
        android:id="@+id/title_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_item_lv_info"
        android:layout_alignTop="@+id/img_item_lv_info"
        android:layout_marginLeft="15dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_item_info"
        android:layout_alignLeft="@+id/title_item_info"
        android:layout_alignBottom="@+id/img_item_lv_info"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/date_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/btn_talk_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_gravity="bottom"
            android:src="@drawable/talk"/>
        <TextView
            android:id="@+id/talk_num_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="bottom"
            android:textSize="14sp"/>
    </LinearLayout>
</RelativeLayout>