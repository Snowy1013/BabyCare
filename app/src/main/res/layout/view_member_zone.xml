<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#BFEFFF">
    <RelativeLayout
        android:id="@+id/memberinfo_zone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:background="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <com.snowy.babycare.view.CircleImageView
            android:id="@+id/touxiang_zone"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:focusable="false"
            android:src="@drawable/touxiang"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/touxiang_zone"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/touxiang_zone"
            android:layout_alignTop="@+id/touxiang_zone">

            <TextView
                android:id="@+id/nickname_zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还没有昵称"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分："
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/points_nums_zone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/msg_unread"/>
                <TextView
                    android:id="@+id/msg_unread_nums_zone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/logout_zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出登录"
        android:background="@drawable/btn_in_main"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:visibility="gone"/>
</RelativeLayout>